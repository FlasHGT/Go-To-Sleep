<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.TimeFragment">

    <TextView
        android:id="@+id/description3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="CHOOSE A TIME RANGE IN WHICH THIS APP WILL OPERATE"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/clockImage2"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/clockImage2"
        app:layout_constraintTop_toBottomOf="@+id/clockImage2" />

    <TextView
        android:id="@+id/startTimeDesc2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="START TIME"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/description3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/description3"
        app:layout_constraintTop_toBottomOf="@+id/description3" />

    <TextView
        android:id="@+id/startTime2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_bottom_border"
        android:gravity="center"
        android:text="12:00 AM"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/startTimeDesc2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/startTimeDesc2"
        app:layout_constraintTop_toBottomOf="@+id/startTimeDesc2" />

    <TextView
        android:id="@+id/endTimeDesc2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="END TIME"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/description3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/description3"
        app:layout_constraintTop_toBottomOf="@+id/startTime2" />

    <TextView
        android:id="@+id/endTime2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_bottom_border"
        android:gravity="center"
        android:text="06:00 AM"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/endTimeDesc2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/endTimeDesc2"
        app:layout_constraintTop_toBottomOf="@+id/endTimeDesc2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/clockImage2"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_access_time_24" />

</androidx.constraintlayout.widget.ConstraintLayout>